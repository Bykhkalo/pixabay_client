<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/loaded_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/downloads_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/feed_bg" />

    <TextView
        android:id="@+id/views_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_eye_24dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_textview"
        app:layout_constraintEnd_toStartOf="@+id/likes_textView"
        app:layout_constraintTop_toTopOf="@+id/downloads_textview"
        tools:text="16541" />

    <TextView
        android:id="@+id/likes_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_like_24dp"
        android:textColor="@android:color/white"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_textview"
        app:layout_constraintEnd_toStartOf="@+id/downloads_textview"
        app:layout_constraintTop_toTopOf="@+id/downloads_textview"
        tools:text="254" />

    <TextView
        android:id="@+id/downloads_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_file_download_24dp"

        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="449" />

</androidx.constraintlayout.widget.ConstraintLayout>